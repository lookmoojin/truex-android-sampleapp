<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="@string/add_to_my_playlist_item_create_new_list">

    <ImageView
        android:id="@+id/createNewListImageView"
        style="@style/TrueID.CardView.ImageSquare"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/music_bg_rect_gray"
        android:contentDescription="@string/add_to_my_playlist_imageview_create_new_list"
        android:padding="10dp"
        android:src="@drawable/music_ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/createNewListTextView"
        style="@style/TextMusic.Body.Bold.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/add_to_my_playlist_textview_create_new_list"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/create_new_list"
        app:layout_constraintBottom_toBottomOf="@+id/createNewListImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/createNewListImageView"
        app:layout_constraintTop_toTopOf="@+id/createNewListImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>