<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:transitionGroup="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/albumAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:visibility="visible">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/albumCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">

            <View
                android:id="@+id/viewOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true" />

            <LinearLayout
                android:id="@+id/albumArtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                tools:layout_marginBottom="16dp"
                tools:layout_marginTop="56dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/shareImageView"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/album_button_share"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_share_black"
                            android:visibility="gone"
                            app:tint="@color/theme_color_black" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/albumArtOverlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/albumArtImageView"
                            style="@style/TrueID.CardView.ImageSquare"
                            android:layout_width="@dimen/header_art_size"
                            android:layout_height="@dimen/header_art_size"
                            android:contentDescription="@string/album_imageview_album"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerRadius.Small"
                            tools:src="@drawable/placeholder_new_trueid_white_square" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/starImageView"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/album_button_favourite"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_star_empty_black"
                            android:visibility="gone"
                            app:tint="@color/theme_color_black" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/albumNameTextView"
                        style="@style/TextMusic.Header1.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/album_textview_album_name"
                        android:gravity="center_horizontal"
                        tools:text="ALBUM NAME" />

                    <TextView
                        android:id="@+id/artistsTextView"
                        style="@style/TextMusic.Small.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/album_textview_artist_name"
                        android:gravity="center_horizontal"
                        tools:text="By Various Artists" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:contentDescription="@string/album_textview_title"
                app:layout_collapseMode="pin"
                app:titleTextAppearance="@style/Toolbar.TitleText" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/collapsed_player_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginBottom="@dimen/bg_product_control_margin_bottom"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <include
                    android:id="@+id/buttonSync"
                    layout="@layout/view_sync_button" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/playAlbumButton"
                        style="@style/TextMusic.Header3.Bold.White"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/music_bg_play_button"
                        android:contentDescription="@string/album_button_shuffle"
                        app:backgroundTint="@color/primary"
                        tools:ignore="MissingPrefix" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressBarAlbum"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/album_progressbar_album"
                        android:elevation="8dp"
                        app:indicatorColor="@color/loading_indicator_color"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/moreImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/album_button_more_album"
                    android:src="@drawable/music_ic_more_vertical"
                    app:tint="@color/theme_color_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.truedigital.features.tuned.presentation.common.HorizontalSeparator
                    android:id="@+id/separatorTracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/song_scroll_song" />

                <LinearLayout
                    android:id="@+id/layoutTracksError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextMusic.Small.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/album_textview_error"
                        android:text="@string/generic_error_message" />

                    <Button
                        android:id="@+id/errorTracksRetryButton"
                        style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/album_button_retry"
                        android:text="@string/generic_error_button" />

                </LinearLayout>

                <TextView
                    android:id="@+id/labelReleaseTextView"
                    style="@style/TextMusic.Body.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/album_textview_release_detail"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/moreBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/moreHeaderTextView"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/album_textview_shelf_title"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        tools:visibility="gone" />

                    <ImageView
                        android:id="@+id/seeAllArrowImageView"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/album_button_more_shelf"
                        android:src="@drawable/music_ic_right_arrow"
                        app:tint="@color/theme_color_black" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/album_scroll_album" />

                <LinearLayout
                    android:id="@+id/layoutMoreError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextMusic.Small.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/album_textview_error"
                        android:text="@string/generic_error_message" />

                    <Button
                        android:id="@+id/errorMoreRetryButton"
                        style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/album_button_retry"
                        android:text="@string/generic_error_button" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <fragment
        android:id="@+id/playlistMusicPlayerContainerFragment"
        class="com.truedigital.features.music.presentation.player.MusicPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>