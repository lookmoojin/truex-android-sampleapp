<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:contentDescription="@string/music_for_you_item_artist">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thumbnailImageView"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@string/music_for_you_imageview_artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/artistTitleTextView"
        style="@style/TextMusic.Small.Bold.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/music_for_you_textview_artist_name"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/thumbnailImageView"
        app:layout_constraintStart_toStartOf="@+id/thumbnailImageView"
        app:layout_constraintTop_toBottomOf="@+id/thumbnailImageView"
        tools:text="Artist Title Title Title Title" />

</androidx.constraintlayout.widget.ConstraintLayout>