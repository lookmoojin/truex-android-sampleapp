                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/appearsOnAlbumsViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/appearsOnAlbumsTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_appear_on_title"
                        android:text="@string/appears_on_albums_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllAppearsOnAlbumsImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_appear_on_see_more"
