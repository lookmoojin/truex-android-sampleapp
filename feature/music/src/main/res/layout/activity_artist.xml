<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:transitionGroup="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/artistAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/artistCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">

            <View
                android:id="@+id/viewOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true" />

            <LinearLayout
                android:id="@+id/artistArtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                tools:layout_marginBottom="16dp"
                tools:layout_marginTop="56dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivShare"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_share_black"
                            android:visibility="gone"
                            app:tint="@color/theme_color_black" />

                    </FrameLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/artistArt"
                        android:layout_width="@dimen/header_art_size"
                        android:layout_height="@dimen/header_art_size"
                        android:contentDescription="@string/artist_imageview_artist"
                        android:src="@drawable/placeholder_new_trueid_white_square"
                        app:civ_border_width="0dp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivStar"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/artist_button_favourite"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_star_empty_black"
                            android:visibility="gone"
                            app:tint="@color/theme_color_black" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewArtistName"
                        style="@style/TextMusic.Header1.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_textview_name"
                        android:gravity="center_horizontal"
                        tools:text="ARTIST NAME" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tvActivityType"
                            style="@style/TextMusic.Small.Gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/artist_textview_type"
                            android:text="@string/artist_label" />

                        <LinearLayout
                            android:id="@+id/llPlayCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/music_ic_play"
                                app:tint="@color/theme_color_black" />

                            <TextView
                                android:id="@+id/tvPlayCount"
                                style="@style/TextMusic.Small.Gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                tools:text="250K+" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:contentDescription="@string/artist_textview_title"
                app:layout_collapseMode="pin"
                app:titleTextAppearance="@style/Toolbar.TitleText" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/collapsed_player_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginBottom="@dimen/bg_product_control_margin_bottom"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <FrameLayout
                    android:id="@+id/flRadio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/music_bg_rounded_gray_border"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/buttonRadio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/music_ic_radio"
                        app:tint="@color/theme_color_black" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressBarRadio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/music_bg_rounded_gray_border"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:indicatorColor="@android:color/white"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/buttonPlayArtist"
                        style="@style/TextMusic.Header3.Bold.White"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/music_bg_play_button"
                        android:contentDescription="@string/artist_button_play"
                        app:backgroundTint="@color/primary"
                        tools:ignore="MissingPrefix" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressBarPlay"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_progressbar_artists"
                        android:elevation="8dp"
                        app:indicatorColor="@color/loading_indicator_color"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/buttonMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/artist_button_more_artist"
                    android:src="@drawable/music_ic_more_vertical"
                    app:tint="@color/theme_color_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/artistsTrendingBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/artistsTrendingViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/trendingTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_trending_title"
                        android:text="@string/trending_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllTrendingImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_trending_see_more"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivTrendingNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/white" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/popularTracksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/popularTracksList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_scroll_trending"
                        android:focusable="false" />

                    <com.truedigital.features.tuned.presentation.common.HorizontalSeparator
                        android:id="@+id/separatorPopularTracks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/popularTracksError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/buttonErrorPopularTracksRetry"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/artistsLatestBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/artistsLatestViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/latestTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_latest_song_title"
                        android:text="@string/latest_songs_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllLatestImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_latest_song_see_more"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivLatestNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/latestTracksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/latestTracksList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_scroll_latest_song"
                        android:focusable="false" />

                    <com.truedigital.features.tuned.presentation.common.HorizontalSeparator
                        android:id="@+id/separatorLatestTracks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/latestTracksError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/buttonErrorLatestTracksRetry"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressBarLatestTracks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_progressbar_latest_songs"
                        app:indicatorColor="@color/primary"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videoAppearsInBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/videoAppearsInViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/videoAppearsInTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/videos_title"
                        android:textAllCaps="true" />


                    <ImageView
                        android:id="@+id/seeAllVideoAppearsInImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivVideoAppearsInNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/videoAppearsInContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/station_shelf_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/videoAppearsInList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/videoAppearsInError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/videoAppearsInErrorRetryButton"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/videoAppearsInProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/primary"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/appearsInBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/appearsInViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/appearsInTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_mixes_title"
                        android:text="@string/appears_in_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllAppearsInImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_mixes_see_more"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivAppearsInNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/appearsInContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/station_shelf_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/appearsInList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:contentDescription="@string/artist_scroll_mixes"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/appearsInError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/appearsInErrorRetryButton"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/appearsInProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_progressbar_mixes"
                        app:indicatorColor="@color/primary"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/albumsBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/albumsViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/albumsTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_album_title"
                        android:text="@string/albums_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllAlbumsImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_album_see_more"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivAlbumsNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/albumsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/station_shelf_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/albumsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:contentDescription="@string/artist_scroll_album"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/albumsError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/albumsRetryButton"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
