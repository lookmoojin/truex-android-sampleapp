                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivAppearsOnAlbumsNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/appearsOnAlbumsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/station_shelf_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/appearsOnAlbumsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:contentDescription="@string/artist_scroll_appear_on"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/appearsOnAlbumsError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/appearsOnAlbumsRetryButton"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/appearsOnAlbumsProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_progressbar_appears_on"
                        app:indicatorColor="@color/primary"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/similarArtistsBgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/similarArtistsViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="@dimen/dynamic_content_heading_top_spacing"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:layout_marginBottom="@dimen/dynamic_content_heading_bottom_spacing">

                    <TextView
                        android:id="@+id/similarArtistsTitle"
                        style="@style/TextMusic.Body.Bold.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/artist_textview_similar_title"
                        android:text="@string/similar_title"
                        android:textAllCaps="true" />

                    <ImageView
                        android:id="@+id/seeAllSimilarArtistsImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/artist_button_similar_see_more"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivSimilarArtistsNavigationArrow"
                        android:layout_width="@dimen/disclosure_indicator_size"
                        android:layout_height="@dimen/disclosure_indicator_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/music_ic_right_arrow"
                        android:visibility="gone"
                        app:tint="@color/theme_color_black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/similarArtistsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/artist_shelf_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarArtistsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:contentDescription="@string/artist_scroll_artist"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/similarArtistsError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextMusic.Small.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_message" />

                        <Button
                            android:id="@+id/similarArtistsErrorRetryButton"
                            style="@style/ButtonMusic.ButtonBorderlessColored.retryShelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_error_button" />

                    </LinearLayout>

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/similarArtistsProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/artist_progressbar_similar"
                        app:indicatorColor="@color/primary"
                        app:indicatorName="LineScalePartyIndicator" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/hintOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/playShuffleHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            tools:layout_marginTop="250dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/music_bg_rect_white_solid"
                android:gravity="center_horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:text="@string/hint_artist_shuffle"
                android:textAppearance="@style/TextMusic.Small.Gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rotation="180"
                android:src="@drawable/music_ic_tooltip_arrow"
                app:tint="@color/theme_color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/playMixHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            tools:layout_marginTop="330dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/music_ic_tooltip_arrow"
                app:tint="@color/theme_color_black" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/music_bg_rect_white_solid"
                android:gravity="center_horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:text="@string/hint_artist_mix"
                android:textAppearance="@style/TextMusic.Small.Gray" />

        </LinearLayout>
    </FrameLayout>

    <fragment
        android:id="@+id/playlistMusicPlayerContainerFragment"
        class="com.truedigital.features.music.presentation.player.MusicPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>