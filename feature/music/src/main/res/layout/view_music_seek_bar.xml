<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:background="@android:color/black">

    <View
        android:id="@+id/emptyView"
        android:layout_width="@dimen/seekbar_width_size"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/musicSeekBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/listenplayer_seekbar_song"
        android:focusable="true"
        android:indeterminate="false"
        android:paddingStart="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        android:progressDrawable="@drawable/progress_bar_expanded_player"
        android:splitTrack="false"
        android:thumb="@drawable/music_ic_seekbar_thumb"
        android:thumbOffset="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:progress="10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currentTimeTextView"
        style="@style/TextMusic.Small.WhiteOpacity60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/listenplayer_textview_currenttime"
        app:layout_constraintStart_toStartOf="@+id/musicSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/musicSeekBar"
        tools:text="00:10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxTimeTextView"
        style="@style/TextMusic.Small.WhiteOpacity60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/listenplayer_textview_endtime"
        app:layout_constraintEnd_toEndOf="@+id/musicSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/musicSeekBar"
        tools:text="04:10" />

</androidx.constraintlayout.widget.ConstraintLayout>