<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:contentDescription="@string/myplaylistshelf_item_playlist">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewPlaylistCover"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/myplaylistshelf_imageview_cover_playlist"
        android:elevation="4dp"
        android:src="@drawable/placeholder_new_trueid_white_square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.App.CornerRadius.Medium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewPlaylistName"
        style="@style/TextMusic.Body.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/myplaylistshelf_textview_playlist_name"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlaylistCover"
        tools:text="Top-50 Techno" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewSongCount"
        style="@style/TextMusic.Body.Grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/myplaylistshelf_textview_track_count"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlaylistName"
        app:layout_constraintStart_toStartOf="@+id/textViewPlaylistName"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlaylistName"
        tools:text="50 songs"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>