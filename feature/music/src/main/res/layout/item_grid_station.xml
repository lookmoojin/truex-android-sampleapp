<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/music_see_all_item_grid_station"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stationImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/music_bg_rect_product_item"
            android:contentDescription="@string/music_see_all_imageview_grid_station_thumbnail"
            android:src="@drawable/placeholder_station" />

        <ImageView
            android:id="@+id/stationImageOverlayImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/music_see_all_imageview_grid_station_background"
            tools:src="@drawable/overlay_artist_shuffle" />

        <ImageButton
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/music_see_all_imageview_grid_station_more"
            android:padding="8dp"
            android:src="@drawable/music_ic_more_vertical"
            android:tint="@color/text_color_primary"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/stationNameTextView"
        style="@style/TextMusic.Small.Bold.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/music_see_all_textview_grid_station_name"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/stationDescriptionTextView"
        style="@style/TextMusic.Small.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/music_see_all_textview_grid_station_description"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1" />

</LinearLayout>