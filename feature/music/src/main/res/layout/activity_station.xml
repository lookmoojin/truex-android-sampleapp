<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:transitionGroup="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/stationAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/placeholder_background"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/stationCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">

            <View
                android:id="@+id/viewOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/overlay_dark"
                android:fitsSystemWindows="true" />

            <LinearLayout
                android:id="@+id/stationArtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                tools:layout_marginBottom="48dp"
                tools:layout_marginTop="56dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivShare"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_share"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/stationArtOverlay"
                        android:layout_width="@dimen/header_art_size"
                        android:layout_height="@dimen/header_art_size"
                        tools:foreground="@drawable/overlay_artist_shuffle">

                        <ImageView
                            android:id="@+id/stationArt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/music_bg_rect_product_item"
                            android:src="@drawable/placeholder_station" />

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="end"
                            android:src="@drawable/placeholder_station"
                            android:tint="@android:color/white" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivStar"
                            android:layout_width="@dimen/product_side_icon_size"
                            android:layout_height="@dimen/product_side_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/product_side_icon_padding"
                            android:src="@drawable/music_ic_star_empty"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/horizontal_row_spacing"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/horizontal_row_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewStationName"
                        style="@style/TextMusic.Title.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        tools:text="STATION NAME" />

                    <TextView
                        android:id="@+id/tvStationType"
                        style="@style/TextMusic.Small.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@android:color/white"
                        tools:text="@string/station_description" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:layout_marginBottom="@dimen/text_tab_height"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/stationTabs"
                style="@style/TabLayoutAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:tabGravity="center"
                app:tabMode="fixed" />

            <View
                android:id="@+id/tabUnderline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/tab_indicator" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
        >

    </com.google.android.material.appbar.AppBarLayout>

    <com.truedigital.features.tuned.presentation.common.NonSwipeViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>