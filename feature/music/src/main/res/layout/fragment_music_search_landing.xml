<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMusicSearchLandingRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/searchLandingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/music_search_button_back"
            android:foreground="@drawable/selectable_background_ripper_circle"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_back_gray"
            app:layout_constraintBottom_toBottomOf="@+id/searchLandingEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchLandingEditText"
            app:tint="@android:color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchLandingEditText"
            style="@style/MusicSearchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/music_search_edittext_search"
            android:hint="@string/music_search"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchLandingImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/clearTextImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/music_search_button_clear_search"
            android:src="@drawable/btn_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/searchLandingEditText"
            app:layout_constraintEnd_toEndOf="@+id/searchLandingEditText"
            app:layout_constraintTop_toTopOf="@+id/searchLandingEditText"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/searchLandingContainerFrameLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchLandingEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>