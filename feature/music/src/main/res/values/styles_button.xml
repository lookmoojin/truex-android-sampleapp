<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMusic.ButtonBorderlessColored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/sukhumvit_tadmai</item>
    </style>

    <style name="ButtonMusic.ButtonBorderlessColored.retryShelf">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_color_black</item>
    </style>

    <style name="ButtonMusic.WarningConfirm" parent="Widget.TrueID.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonMusic.WarningCancel" parent="Widget.TrueID.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1sp</item>
    </style>

    <style name="ButtonMusic.Shuffle" parent="Widget.TrueID.Button">
        <item name="android:textColor">@color/color_text_button_white</item>
        <item name="android:background">@drawable/selector_round_button_gray_black</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAppearance">@style/TextMusic.Header3.White</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonMusic.CreateNewPlaylist" parent="Widget.TrueID.Button">
        <item name="android:textColor">@color/color_text_button_white</item>
        <item name="android:background">@drawable/selector_round_button_gray_black</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAppearance">@style/TextMusic.Header3.White</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>