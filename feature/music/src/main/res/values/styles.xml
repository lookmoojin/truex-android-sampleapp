<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GradientActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/music_bg_toolbar</item>
        <item name="homeAsUpIndicator">@drawable/music_ic_left_arrow</item>
    </style>

    <style name="ProfileItemRow">
        <item name="android:paddingTop">@dimen/vertical_inter_item_spacing</item>
        <item name="android:paddingBottom">@dimen/vertical_inter_item_spacing</item>
        <item name="android:paddingStart">@dimen/horizontal_row_spacing</item>
        <item name="android:paddingEnd">@dimen/horizontal_row_spacing</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TabLayoutAppearance">
        <item name="tabBackground">@null</item>
        <item name="tabSelectedTextColor">@color/tablayout_text_selected</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabSelectedFontFamily">@font/sukhumvit_tadmai_bold</item>
        <item name="tabFontFamily">@font/sukhumvit_tadmai_regular</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIconTint">@color/tab_layout_text</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sukhumvit_tadmai</item>
        <item name="android:textColor">@color/tab_layout_text</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sukhumvit_tadmai</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderlessRetryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/sukhumvit_tadmai</item>
    </style>

    <style name="MusicSearchEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/sukhumvit_tadmai</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@android:color/black</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/music_bg_search_white</item>
        <item name="android:drawableStart">@drawable/res_ic_search_black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>
</resources>