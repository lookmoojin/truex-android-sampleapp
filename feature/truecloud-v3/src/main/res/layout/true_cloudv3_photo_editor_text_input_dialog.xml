<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trueCloudHeaderTitle"
        style="@style/TrueID.Body.Bold.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/true_cloudv3_spacing_3s"
        android:text="@string/true_cloudv3_photo_editor_text_input_dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:gravity="center"
        android:hint="@string/true_cloudv3_photo_editor_text_input_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white_50"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/discardImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/true_cloudv3_spacing_2m"
        android:layout_marginBottom="@dimen/true_cloudv3_spacing_m"
        android:contentDescription="@string/true_cloudv3_photo_editor_discard"
        android:src="@drawable/ic_true_cloudv3_photo_editor_discard_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/confirmImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/true_cloudv3_spacing_2m"
        android:layout_marginBottom="@dimen/true_cloudv3_spacing_m"
        android:contentDescription="@string/true_cloudv3_photo_editor_save"
        android:src="@drawable/ic_true_cloudv3_photo_editor_confirm_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
