<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DegreeRulerView">
        <attr name="drv_min_value" format="integer" />
        <attr name="drv_max_value" format="integer" />

        <attr name="drv_indicator_interval" format="dimension" />
        <attr name="drv_indicator_color" format="color" />
    </declare-styleable>

    <declare-styleable name="DegreeRulerValuePicker">
        <attr name="drvp_min_value" format="integer" />
        <attr name="drvp_max_value" format="integer" />

        <attr name="drvp_indicator_interval" format="dimension" />
        <attr name="drvp_indicator_color" format="color" />
    </declare-styleable>

    <declare-styleable name="StartPointSeekBar">
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="thumbDrawable" format="reference"></attr>
        <attr name="thumbPressedDrawable" format="reference"></attr>
        <attr name="defaultBackgroundColor" format="color"></attr>
        <attr name="defaultBackgroundRangeColor" format="color"></attr>
    </declare-styleable>
</resources>
