<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appCollapsingToolbar"
    style="?attr/cab_title_style"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    app:expandedTitleGravity="top"
    app:expandedTitleMarginTop="@dimen/appbar_expanded_title_margin_Top_not_header"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    app:toolbarId="@+id/toolbar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/iconLinearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_collapseMode="pin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/commonBtn"
        style="@style/TrueID.Small.Bold.Black"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="24dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/common_round_corner_12dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_collapseMode="parallax" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_collapseMode="pin" />

</com.google.android.material.appbar.CollapsingToolbarLayout>
