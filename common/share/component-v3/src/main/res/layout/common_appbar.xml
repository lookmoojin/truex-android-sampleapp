<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appCollapsingToolbar"
    style="?attr/cab_title_style"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    app:expandedTitleGravity="top"
    app:expandedTitleMarginTop="@dimen/appbar_expanded_title_margin_Top_not_header"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    app:toolbarId="@+id/toolbar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/iconLinearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_collapseMode="pin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/commonBtn"
        style="@style/TrueID.Small.Bold.Black"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="24dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/common_round_corner_12dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_collapseMode="parallax" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_collapseMode="pin" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/iconSecondRowLinearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="1.0"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scanIconImageView"
            style="?attr/cab_icon_scan_style"
            android:contentDescription="@string/scanner_icon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/searchIconImageView"
            style="?attr/cab_icon_search_style"
            android:contentDescription="@string/search_box" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.truedigital.community.presentation.CommunityShortCutWidget
        android:id="@+id/communityShortCut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="90dp"
        android:theme="?attr/cab_search_style"
        android:visibility="gone"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8" />

    <com.truedigital.common.share.componentv3.widget.CommonSearchBar
        android:id="@+id/commonSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="90dp"
        android:theme="?attr/cab_search_style"
        android:visibility="gone"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8" />

    <com.truedigital.common.share.componentv3.widget.feedmenutab.CommunityTab
        android:id="@+id/todayCommunityTabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="8dp"
        android:contentDescription="@string/community_tab"
        android:visibility="gone"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8" />

</com.google.android.material.appbar.CollapsingToolbarLayout>
