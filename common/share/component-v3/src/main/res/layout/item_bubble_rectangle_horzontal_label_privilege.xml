<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thumbnailImageView"
        style="@style/ShapeAppearance.App.CircleImageView.Default.Bubble"
        android:layout_width="@dimen/privilege_bubble_item_size"
        android:layout_height="@dimen/privilege_bubble_item_size"
        android:padding="2dp"
        android:contentDescription="@string/privilege_button_bubble_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView.Default" />

</androidx.constraintlayout.widget.ConstraintLayout>
