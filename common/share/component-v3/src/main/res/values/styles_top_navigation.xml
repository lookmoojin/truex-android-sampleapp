<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TrueID.TopNavigation">
        <item name="background">@color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@color/grey_100</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabMinWidth">80dp</item>
        <item name="tabMaxWidth">480dp</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextAppearance">@style/TrueID.TopNavigation.TabTextAppearance</item>
    </style>

    <style name="TrueID.TopNavigation.Dark">
        <item name="background">@color/black</item>
        <item name="tabTextColor">#696969</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabRippleColor">@color/black_100</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="TrueID.TopNavigation.Round">
        <item name="background">@color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabBackground">@drawable/tab_bg_light</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TrueID.TopNavigation.TabTextAppearance</item>
        <item name="tabIconTint">@color/select_top_navigation</item>
    </style>

    <style name="TrueID.TopNavigation.Round.Dark">
        <item name="tabRippleColor">@color/black</item>
        <item name="background">@color/black</item>
        <item name="tabBackground">@drawable/tab_bg_dark</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TrueID.TopNavigation.TabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>