<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TrueID.Header">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="TrueID.Header.Avatar">
        <item name="shapeAppearance">@style/ShapeAppearance.App.CircleImageView</item>
    </style>

    <style name="TrueID.Header.Avatar.Member">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="TrueID.Header.Avatar.Post">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="TrueID.Header.Icon">
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="srcCompat">@mipmap/example_ic_user</item>
    </style>

    <!-- Today Style -->
    <style name="ShapeAppearance.App.CircleImageView.Default">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView.Default.Profile">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView.Default.Bubble">
        <item name="strokeColor">@color/light_on_surface_disabled</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView.Like">
        <item name="android:src">@drawable/ic_baseline_thumb_up_24</item>
        <item name="android:background">@color/grey_300</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView.ArrowForward">
        <item name="android:src">@drawable/ic_round_arrow_forward_24</item>
        <item name="android:background">@color/grey_300</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView.Back">
        <item name="android:src">@drawable/ic_left</item>
        <item name="android:background">@color/black_50</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerRadius.Large" parent="">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerRadius.Medium" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerRadius.MediumSmall" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerRadius.Small" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TrueID.ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TrueID.ImageView.Vertical">
        <item name="android:src">@mipmap/placeholder_trueidwhite_vertical</item>
    </style>

    <style name="TrueID.ImageView.Horizontal">
        <item name="android:src">@mipmap/placeholder_trueidwhite_horizontal</item>
    </style>

    <style name="TrueID.ImageView.Square">
        <item name="android:src">@mipmap/placeholder_trueidwhite_square</item>
    </style>

    <style name="TrueID.ImageView.Square.TypeButton">
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    <!-- Today Style -->

    <style name="TrueID.ImageView.Vertical.Movie">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">148dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TrueID.ImageView.Horizontal.Movie.ContinueWatching" parent="TrueID.ImageView.Horizontal">
        <item name="android:layout_width">@dimen/horizontal_item_image_width</item>
        <item name="android:layout_height">@dimen/horizontal_item_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.ImageView.Horizontal.Watch.RelateItem" parent="TrueID.ImageView.Horizontal">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.ImageView.Horizontal.Watch.RelateItem.Land" parent="TrueID.ImageView.Horizontal">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">176dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.ShapeableImageView.Square.Small" parent="TrueID.ImageView.Square">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.CornerRadius.Large</item>
    </style>

    <style name="TrueID.BadgePremium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_badge_premium_rent</item>
    </style>

    <style name="TrueID.BadgeTrueIdPlus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:src">@drawable/ic_badge_true_id_plus</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="TrueID.BadgeExclusive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="TrueID.BadgeUpdated">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Welcome Style -->
    <style name="TrueID.WelcomeImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="TrueID.CloseWelcomeImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/web_view_btn_close</item>
        <item name="android:clickable">false</item>
    </style>
    <!-- Welcome Style -->

    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>
