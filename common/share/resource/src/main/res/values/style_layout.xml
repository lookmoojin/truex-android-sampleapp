<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Frame Style -->

    <style name="TrueID.Frame">
        <item name="android:background">@drawable/common_round_corner_12dp</item>
    </style>

    <style name="TrueID.Frame.Gray">
        <item name="android:background">@color/light_on_primary_medium_emphasis</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TrueID.Frame.Vertical">
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.Frame.ShortFormVideo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.Frame.ShortFormVideoTopResult">
        <item name="android:layout_width">114dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.Frame.Square">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.Frame.Square.Product">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.Frame.Horizontal">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- End Frame Style -->

    <!-- CardView Style -->

    <style name="CardView.CornerRadius.Small" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardView.CornerRadius.Medium" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="CardView.CornerRadius.Large" parent="CardView">
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="TrueID.CardView" parent="CardView">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TrueID.CardView.Rectangle" />

    <style name="TrueID.CardView.Rectangle.Horizontal">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.CardView.Rectangle.Privilege">
        <item name="android:layout_width">213dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="TrueID.CardView.Rectangle.Placeholder">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.CardView.Rectangle.HorizontalLabel2">
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrueID.CardView.VideoVertical">
        <item name="layout_constraintDimensionRatio">9:16</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageVertical">
        <item name="layout_constraintDimensionRatio">7:10</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageVertical.Movie">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">148dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TrueID.CardView.ImageVertical.Live">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TrueID.CardView.ImageHorizontal.Live">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TrueID.CardView.ImageHorizontal.Chanel">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="layout_constraintDimensionRatio">104:80</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/red_100</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="TrueID.CardView.ImageVertical.InCardFeed">
        <item name="android:layout_width">114dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="TrueID.CardView.ImageVertical.WeMall">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageVertical.LiveCommerce">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageSquare">
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_square</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageSquare.InCardFeed">
        <item name="android:layout_width">132dp</item>
        <item name="android:layout_height">132dp</item>
    </style>

    <style name="TrueID.CardView.ImageHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">16:9</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_horizontal</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TrueID.CardView.ImageHorizontal_21_9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">21:9</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageHorizontalClip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">16:10</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.ImageSquareClip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:src">@mipmap/placeholder_trueidwhite_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrueID.CardView.Highlight">
        <item name="android:layout_width">102dp</item>
        <item name="android:layout_height">88dp</item>
    </style>

    <style name="TrueID.CardView.Highlight.InnerFrame">
        <item name="android:background">@color/light_states_black_overlay_hover</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="TrueID.CardView.ImageHighlight">
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="srcCompat">@drawable/ic_watch_highlight</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <!-- END CardView Style -->

    <style name="TrueID.ButtonPlay">
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:src">@drawable/common_button_play</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="TrueID.ShelfHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>
</resources>
